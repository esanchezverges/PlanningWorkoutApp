@namespace PlanningWorkoutApp.UI
@using System.Linq.Expressions

<RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">@Label</RadzenText>
<RadzenTextBox Disabled=@Disabled Value="@Value" ValueChanged="@ValueChanged" ValueExpression="@ValueExpression" Style="width: 100%" aria-label="@Label" />

@code{
    [Parameter] public string? Label { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public string? Value { get; set; } = null!;
    [Parameter] public EventCallback<string?> ValueChanged { get; set; }
    [Parameter] public Expression<Func<string>> ValueExpression { get; set; } = default!;
}
